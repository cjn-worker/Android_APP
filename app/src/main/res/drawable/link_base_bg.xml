        android:angle="90"
        android:startColor="#45B9F6"
        android:centerColor="#3294FD"
        android:endColor="#0061F3"/>
    <corners android:radius="5dp"/>
    <stroke
        android:width="3dp"
        android:color="#003763A5"
        />
    <padding
        android:bottom="1dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        />
