<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--主页设置，帮助按钮的样式-->
    <style name="main_circle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <!--操作按钮（菜单，刷新，下一关）的样式-->
    <style name="operation_btn">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--关卡页面控制器按钮的样式-->
    <style name="pager_bg">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <!--页面-->
    <style name="ShowPagerMessage">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#527D98</item>
    </style>

    <!--设置背景音乐，音效的文本样式-->
    <style name="Setting_Music_Text">
        <item name="android:textColor">#F0B773</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--主页三个模式按钮的样式-->
    <style name="mode_btn">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/start_button_shape</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawablePadding">30dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--主页设置、排行榜的样式-->
    <style name="main_bg">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <!--金币的字体样式-->
    <style name="link_money_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FEFDA8</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!--游戏界面关卡字体样式-->
    <style name="link_level">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">26sp</item>
    </style>

    <!--游戏界面具体关卡信息字体样式-->
    <style name="link_level_message">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--控制道具大小的样式-->
    <style name="link_props">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="imgResource">@drawable/img_shape</item>
    </style>

    <!--包裹道具的布局样式-->
    <style name="link_prop_relative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">45dp</item>
    </style>

    <!--商店界面后买金币字体的样式-->
    <style name="ShowMoneyText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">28sp</item>
    </style>

    <!--金币展示-->
    <style name="ShowMoneyNumText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#6E748F</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <!--单个商品价格展示-->
    <style name="ShowSimpleMoneyNumText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <!--单个商品名称文本样式-->
    <style name="ShowSimplePropTitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#C5DFFC</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!--单个商品描述文本样式-->
    <style name="ShowSimplePropDesText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>