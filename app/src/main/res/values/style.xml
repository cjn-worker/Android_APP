<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--主页设置，帮助按钮的样式-->
    <style name="main_circle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <!--操作按钮（菜单，刷新，下一关）的样式-->
    <style name="operation_btn">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--关卡页面控制器按钮的样式-->
    <style name="pager_bg">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <!--页面-->
    <style name="ShowPagerMessage">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#527D98</item>
    </style>

    <!--设置背景音乐，音效的文本样式-->
    <style name="Setting_Music_Text">
        <item name="android:textColor">#F0B773</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--主页三个模式按钮的样式-->
    <style name="mode_btn">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/start_button_shape</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawablePadding">30dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--主页设置、排行榜的样式-->
    <style name="main_bg">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>
</resources>